<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
    <name>kicktemp</name>
    <version>1.0.1</version>
    <creationDate>25 July 2016</creationDate>
    <author>Niels Nübel</author>
    <authorEmail>info@niels-nuebel.de</authorEmail>
    <authorUrl>http://www.niels-nuebel.de</authorUrl>
    <copyright>Copyright © 2013 - 2016 niels-nuebel.de</copyright>
    <description>TPL_KICKTEMP_XML_DESCRIPTION</description>
    <files>
        <filename>.bowerrc</filename>
        <filename>.gitignore</filename>
        <filename>bower.json</filename>
        <filename>CHANGELOG.md</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>gulpfile.js</filename>
        <filename>index.php</filename>
        <filename>LICENSE</filename>
        <filename>package.json</filename>
        <filename>README.md</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
        <folder>assets</folder>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
        <folder>tpls</folder>
    </files>
    <positions>
        <position>logo</position>
        <position>menu</position>
        <position>search</position>
        <position>top</position>
        <position>inner-top</position>
        <position>sidebar-a</position>
        <position>sidebar-b</position>
        <position>inner-bottom</position>
        <position>bottom</position>
        <position>footer</position>
        <position>debug</position>
    </positions>

    <config><!-- no need to change -->
        <fields name="params">

            <fieldset name="advanced">
                <!-- CSSFILENAME -->
                <field name="cssfilename"
                       type="filelist"
                       default="kicktemp.min.css"
                       label="TPL_KICKTEMP_PARAMETER_CSSFILENAME_LABEL"
                       description="TPL_KICKTEMP_PARAMETER_CSSFILENAME_DESC"
                       directory="templates/kicktemp/css"
                       filter="\.css"
                       striptext="true"
                       hide_none="true"
                />
                <!-- JSFILENAME -->
                <field name="jsfilename"
                       type="filelist"
                       default="kicktemp.min.js"
                       label="TPL_KICKTEMP_PARAMETER_JSFILENAME_LABEL"
                       description="TPL_KICKTEMP_PARAMETER_JSFILENAME_DESC"
                       directory="templates/kicktemp/js"
                       filter="\.js"
                       striptext="true"
                       hide_none="true"
                />

                <!-- SHOWONFRONTPAGE -->
                <field  name="hidecontentwrapper"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_HIDECONTENTWRAPPER_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_HIDECONTENTWRAPPER_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- SHOWSYSTEMOUTPUT -->
                <field  name="showsystemoutput"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_SHOWSYSTEMOUTPUT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SHOWSYSTEMOUTPUT_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="layout"
                       type="filelist"
                       default="default.php"
                       label="TPL_KICKTEMP_PARAMETER_LAYOUT_LABEL"
                       description="TPL_KICKTEMP_PARAMETER_LAYOUT_DESC"
                       directory="templates/kicktemp/tpls"
                       filter="\.php"
                       striptext="true"
                       hide_none="true"
                />
            </fieldset>

            <fieldset name="boostrap">

                <!-- SHOWSYSTEMOUTPUT -->
                <field  name="show_caret"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="TPL_KICKTEMP_PARAMETER_SHOWCARET_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SHOWCARET_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <!-- SIDEBAR A -->
                <field  name="sidebar-a"
                        class=""
                        type="text"
                        default="col-md-4 col-lg-3 col-md-pull-8 col-lg-pull-9"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_DESC"
                />

                <field  name="sidebar-a-3-col"
                        class=""
                        type="text"
                        default="col-md-3 col-md-pull-6"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_3_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_3_COL_DESC"
                />

                <!-- SIDEBAR B -->
                <field  name="sidebar-b"
                        class=""
                        type="text"
                        default="col-md-4 col-lg-3 col-lg-offset-1"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_DESC"
                />

                <field  name="sidebar-b-3-col"
                        class=""
                        type="text"
                        default="col-md-3"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_3_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_3_COL_DESC"
                />

                <!-- CONTENT 1 -->
                <field  name="content-1-col"
                        class=""
                        type="text"
                        default="main col-md-12"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_1_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_1_COL_DESC"
                />

                <!-- CONTENT 2 -->
                <field  name="content-2-col-a"
                        class=""
                        type="text"
                        default="main col-md-8 col-lg-offset-1 col-md-push-4 col-lg-push-3"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_A_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_A_DESC"
                />

                <field  name="content-2-col-b"
                        class=""
                        type="text"
                        default="main col-md-8"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_B_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_B_DESC"
                />

                <!-- CONTENT 3 -->
                <field  name="content-3-col"
                        class=""
                        type="text"
                        default="main col-md-6 col-md-push-3"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_3_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_3_COL_DESC"
                />
            </fieldset>

            <fieldset name="analytics">
                <!-- GOOGLE ANALYTICS -->
                <field  name="googleanalytics"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE ANALYTICS CODE-->
                <field  name="googleanalyticscode"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_CODE_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_CODE_DESC"
                />

                <!-- GOOGLE ANALYTICS LINKZUORDNUNG-->
                <field  name="googlelinkid"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_GOOGLELINKID_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLELINKID_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE ANALYTICS DISPLAYFEATURES-->
                <field  name="googledisplayfeatures"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEADISPLAYFEATURES_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEADISPLAYFEATURES_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

            <fieldset name="tagmanager">
                <!-- GOOGLE TAGMANAGER -->
                <field  name="googletagmanager"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_GOOGLETAGMANAGER_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLETAGMANAGER_DESC"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE TAGMANAGER CODE-->
                <field  name="googletagmanagercode"
                        class=""
                        type="textarea"
                        default=""
                        filter="raw"
                        label="TPL_KICKTEMP_PARAMETER_GOOGLETAGMANAGERCODE_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLETAGMANAGERCODE_DESC"
                />
            </fieldset>

            <fieldset name="webfonts">
                <!-- GOOGLE FONT-->
                <field  name="googlefont"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEFONT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEFONT_DESC"
                />
            </fieldset>
        </fields>
    </config>
</extension>